html(lang="es")
  head
    meta(charset='UTF-8')
    meta(name='viewport' content='width=device-width, initial-scale=1.0')
    meta(http-equiv='X-UA-Compatible' content='ie=edge')
    link(href='/public/vendors/fontawesome-free/css/all.min.css' rel='stylesheet')
    link(href='/public/vendors/simple-line-icons/css/simple-line-icons.css' rel='stylesheet' type='text/css')
    // Custom styles for this template
    link(rel='stylesheet' href='/public/css/landing-page.css')
    link(rel='stylesheet' href='/public/css/style.css')
    link(rel='stylesheet' href='/public/css/css.css')

    title=title
  body
    nav.navbar.navbar-expand-lg.navbar-dark.bg-dark.sticky-top
      a.navbar-brand(href='/')
        img.d-inline-block.align-top(src='../public/images/logo.svg' width='50' height='50' alt='logo petlink')
        | &#x9;&#x9;Petlink
      button.navbar-toggler(type='button' data-toggle='collapse' data-target='#navbarPrincipal' aria-controls='navbarNavAltMarkup' aria-expanded='false' aria-label='Toggle navigation')
        span.navbar-toggler-icon
      #navbarPrincipal.collapse.navbar-collapse
        .navbar-nav.text-center.ml-auto
          a.nav-item.nav-link(href='/users/petlinker') Petlinker&#x9;
          a.nav-item.nav-link(href='/adopt') Adopte
          a.nav-item.nav-link(href='/users/store') Tienda
          a.nav-item.nav-link(href='/about') Nosotros
          if !user
            a.nav-item.nav-link(href='/login/signup') Registro
            a.nav-item.nav-link(href='/login/signin') login
          else
            a.nav-item.nav-link(href='/users/profile') #{user.nombre}
            a.nav-item.nav-link(href='/login/logout') salir
          
    .container-fluid
      include message
      block body
      
    include footer

  block scripts
    link(href='https://fonts.googleapis.com/css?family=Lato:300,400,700,300italic,400italic,700italic' rel='stylesheet' type='text/css')
    link(rel='stylesheet' href='/public/vendors/bootstrap/css/bootstrap.min.css')
    script(src='/public/vendors/bootstrap/js/bootstrap.min.js')
    script(src="/public/vendors/jquery/jquery.min.js")
    script(src='https://code.jquery.com/jquery-3.3.1.slim.min.js' integrity='sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo' crossorigin='anonymous')
    script(src='https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js' integrity='sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1' crossorigin='anonymous')