extends layout

block body
  .card.o-hidden.border-0.shadow-lg.my-5
    .card-body.p-0
      // Nested Row within Card Body
      .row
        .col-lg-5.d-none.d-lg-block.bg-register-image(style="background-image: url('/public/images/perro-black-signup.jpg')")
        .col-lg-7
          .p-5
            .text-center
              h1.h4.text-gray-900.mb-4 Crear nueva cuenta
            // FORMULARIO DE REGISTRO DE USUARIOS, COLOCAR ACCIONES
            form.user(action="/login/signup" method="POST")
              .form-group.row
                .col-sm-6.mb-3.mb-sm-0
                  input#FirstName.form-control.form-control-user(type='text' placeholder='Nombre' name='nombre')
                .col-sm-6
                  input#LastName.form-control.form-control-user(type='text' placeholder='Apellido', name='apellido')
              .form-group
                input#InputEmail.form-control.form-control-user(type='email' placeholder='Email', name='email')
              .form-group.row
                .col-sm-6.mb-3.mb-sm-0
                  input#InputPassword.form-control.form-control-user(type='password' placeholder='contraseña', name="password1")
                .col-sm-6
                  input#RepeatPassword.form-control.form-control-user(type='password' placeholder='repetir contraseña', name="password2")
              // REGISTROS CON FB Y OTRAS CUENTAS
              button.btn.btn-primary.btn-user.btn-block(type='submit')
                | Registrar cuenta
              hr
              a.btn.btn-google.btn-user.btn-block(href='/auth/google')
                i.fab.fa-google.fa-fw
                |  Register with Google
            hr
            .text-center
              a.small(href='/login/signin') &iquest;Ya tienes cuenta? &iexcl;Iniciar sesion!

