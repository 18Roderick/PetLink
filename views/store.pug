extends layout 

block body
  section(id='prod-container section')
    .container-fluid
      .row
        .col-xs-12.text-center
          p.tittles-pages
          br
          br
        .col-xs-12
          .container
            ul#TabProducts.nav.nav-tabs(role='tablist')
              li.active
                a(href='#all-categories' role='tab' data-toggle='tab')
                  i.fa.fa-th
                  | &nbsp; Todo
              li
                a(href='#smartphones' role='tab' data-toggle='tab')
                  i.fa.fa-mobile
                  | &nbsp; Accesorios
              li
                a(href='#tablets' role='tab' data-toggle='tab')
                  i.fa.fa-tablet
                  | &nbsp; Mascotas
              li
                a(href='#tablets' role='tab' data-toggle='tab')
                  i.fa.fa-tablet
                  | &nbsp; Mascotas
            .tab-content
              // ===================================== Todas las categorias =============================================
              #all-categories.tab-pane.active
                br
                p.tittles-pages Todos los productos
                .row
                  .col-xs-12.col-sm-6.col-md-3
                    .thumbnail.thumbnail-content-phones
                      img.img-responsive(src='assets/img/product.png' alt='prod-icon')
                      .caption
                        h3.text-center(name='nom_pet') Producto
                        p.text-justify(name='datos_pet')
                          | informacion de su mascota
                        p.text-center
                          a.btn.btn-danger(href='./detalle_producto.html' role='button') Ver m&aacute;s
                .row
                  // Paginacion productos
                  .col-xs-12.text-center
                    ul.pagination
                      li
                        a(href='#') &laquo;
                      li.active
                        a(href='#') 1
                      li
                        a(href='#') 2
                      li
                        a(href='#') 3
